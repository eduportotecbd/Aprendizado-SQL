-- Garantir que o Banco de Dados "EXERCICIOS" est√° selecionado
USE EXERCICIOS;

---------------------------------------------------------------
-- üßë‚Äçüíª Tabela de Clientes
---------------------------------------------------------------
CREATE TABLE DCLIENTE (
    ID_CLIENTE INT,
    NOME_CLIENTE VARCHAR(100),
    DATA_DE_NASCIMENTO DATETIME
);

---------------------------------------------------------------
-- üëî Tabela de Gerentes
---------------------------------------------------------------
CREATE TABLE DGERENTE (
    ID_GERENTE INT,
    NOME_GERENTE VARCHAR(100),
    DATA_DE_CONTRATACAO DATETIME,
    SALARIO FLOAT
);

---------------------------------------------------------------
-- üìë Tabela de Contratos
---------------------------------------------------------------
CREATE TABLE FCONTRATOS (
    ID_CONTRATO INT,
    DATA_DE_ASSINATURA DATETIME,
    ID_CLIENTE INT,
    ID_GERENTE INT,
    VALOR_CONTRATO FLOAT
);

---------------------------------------------------------------
-- üîé Consultas para visualizar as tabelas criadas
---------------------------------------------------------------
SELECT * FROM DCLIENTE;
SELECT * FROM DGERENTE;
SELECT * FROM FCONTRATOS;
